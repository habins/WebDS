<!-- Sidebar -->
   <div class="sidebar">
        <div class="sidebar-dropdown"><a href="#">导航</a></div>

        <!--- Sidebar navigation -->
        <!-- If the main navigation has sub navigation, then add the class "has_sub" to "li" of main navigation. -->
        <ul id="nav">
            <li class="has_sub"><a href="#" class="subdrop">厂家列表  <span class="pull-right"><i class="icon-chevron-right"></i></span></a>

            <ul>
                 @{var @defaultVendor = ""; var @active = "";}
                 @foreach (var VendorList in ViewData["VendorList"] as Dictionary<string, string>)
                  {
                      if (defaultVendor == "") { defaultVendor = VendorList.Key; active="active";} else {active="";}
                    <li>
                         <a class="@active" data-id="@VendorList.Key" onclick="AjaxGetVendorInfo('@VendorList.Key')" href="#">@VendorList.Value</a>
                    </li>
                  }
                @if (defaultVendor != "")
                {
                    <script>
                        AjaxGetVendorInfo(@defaultVendor);
                    </script>
                }
            </ul>
            </li>  
        </ul>
    </div> 
<!-- Sidebar ends -->

<!-- Main bar -->
    <div class="mainbar" style="min-height:650px">
        <!-- Page heading -->
	    <div class="page-head">
	      <h3 class="pull-left"><i class="icon-home"></i> 浏览系统</h3>

        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
            <button type="button" class="btn btn-default" onclick="AddVendor()">添加</button>
            <button type="button" class="btn btn-default" onclick="EditVendor()">编辑</button>
            <button type="button" class="btn btn-default"onclick="DelVendor()">删除</button>
        </div>

        <div class="clearfix"></div>

	    </div>
	    <!-- Page heading ends -->
        <div class="matter">
            <div class="container">
        <div class="row">

                                <div class="col-md-12">
                                    <div class="widget">

                                    <div class="widget-content">

                                    <table id="tb_vendor" class="table table-striped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <th class="hide">ID</th>
                                            <th class="col-md-3">厂家名称</th>
                                            <th class="col-md-3">系统描述</th>
                                            <th class="col-md-3">系统类型</th>
                                            <th class="col-md-3">系统版本</th>
                                        </tr>
                                        </thead>
                                        <tbody id="tb_vendor_body">

                                       
                                        </tbody>
                                    </table>

                                    </div>

                                    </div>
                                </div>

 

                            </div>
        </div>
        </div>
    </div>
<!-- Mainbar ends -->	 

<script type="text/javascript">

    function AddVendor() {
        location.href = '../main/add';
    }

    function EditVendor() {
        if ($('#tb_vendor .highlight').length > 0) {
            $('#tb_vendor .highlight').dblclick();
        } else {
            alert('请选中要编辑的系列！');
        }
    }

    function DelVendor() {
        if ($('#tb_vendor .highlight').length == 0) {
            alert('请选中要删除的系列！');
            return false;
        }
        return confirm('确定要删除选中的系列吗？');
    }


</script>